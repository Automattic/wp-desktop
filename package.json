{
  "name": "WordPressDesktop",
  "productName": "WordPress.com",
  "version": "3.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Automattic/wp-desktop/"
  },
  "private": true,
  "description": "Desktop version of WordPress.com",
  "author": {
    "name": "Automattic Inc.",
    "email": "wp-desktop@automattic.com"
  },
  "main": "build/desktop.js",
  "scripts": {
    "setup": "npm run install-if-deps-outdated && ( check-node-version --package || exit 0 ) && cd ./calypso && node ./bin/install-if-deps-outdated.js && cd .. && npm run build:config",
    "start": "npm run start:desktop",
    "start:desktop": "npm run setup && npm run build && npm run start:electron",
    "start:dev": "npm run setup && npx concurrently `npm run build:desktop` `npm run start:calypso` `npx wait-on http://calypso.localhost:3000 && npm run start:electron`",
    "start:calypso": "cd calypso; npm run poststart",
    "start:electron": "npx electron .",
    "build": "npm run build:calypso && npm run build:desktop",
    "build:desktop": "npm run build:config && NODE_PATH=calypso/server:calypso/client npx webpack --config ./webpack.config.js",
    "build:calypso": "cd calypso && npm run build",
    "build:config": "node ./resource/build-scripts/build-config-file.js",
    "build:electron": "npx electron-builder build",
    "install-if-deps-outdated": "node calypso/bin/install-if-deps-outdated.js"
  },
  "keywords": [
    "desktop",
    "wordpress",
    "wordpress.com"
  ],
  "engines": {
    "node": "8.9.4",
    "npm": "5.6.0"
  },
  "optionalDependencies": {
    "appdmg": "^0.4.5"
  },
  "devDependencies": {
    "asar": "^0.11.0",
    "babel-core": "6.26.0",
    "babel-eslint": "^6.0.4",
    "babel-loader": "7.1.2",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.3.13",
    "chai": "^3.4.1",
    "chalk": "2.3.1",
    "check-node-version": "3.2.0",
    "concurrently": "3.5.1",
    "electron": "1.6.16",
    "electron-builder": "20.5.1",
    "electron-mocha": "^2.1.0",
    "electron-packager": "^7.0.2",
    "eslint": "^2.10.2",
    "eslint-plugin-react": "^5.1.1",
    "json-loader": "^0.5.4",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "mv": "^2.1.1",
    "unzip": "^0.1.11",
    "wait-on": "2.1.0",
    "webpack": "3.10.0",
    "webpack-cli": "2.0.9"
  },
  "dependencies": {
    "debug": "2.6.8",
    "express": "4.15.3",
    "lodash.clonedeep": "4.5.0",
    "lodash.debounce": "4.0.8",
    "portscanner": "1.2.0",
    "pug": "2.0.0-rc.4",
    "spellchecker": "3.4.3",
    "superagent": "1.8.5"
  },
  "build": {
    "productName": "WordPress.com for Desktop",
    "appId": "com.automattic.wordpress",
    "directories": {
      "output": "./release"
    },
    "asar": false,
    "files": [
      "./build/desktop.js",
      "./public_desktop",
      {
        "from": "./calypso",
        "to": "./calypso",
        "filter": [
          "public/**/*",
          "!public/**/*.css.map",
          "server/pages/**/*",
          "!server/pages/test",
          "!server/pages/README.md",
          "server/bundler/assets.json",
          "config/*(secrets|_shared|desktop).json"
        ]
      }
    ],
    "dmg": {
      "title": "WordPress.com Installer",
      "icon": "./resource/image/dmg-icon.icns",
      "iconSize": 150,
      "background": "./resource/image/dmg-background/background.png",
      "contents": [
        {
          "x": 486,
          "y": 176,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 156,
          "y": 179,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "./resource/image/app-icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Development"
    }
  }
}
